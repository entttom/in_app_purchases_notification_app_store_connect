# Webhook security
WEBHOOK_SECRET=replace-with-a-long-random-secret

# Pushover credentials
PUSHOVER_APP_TOKEN=replace-with-pushover-app-token
PUSHOVER_USER_KEY=replace-with-default-pushover-user-key
# Optional: limit notifications to a specific device name
PUSHOVER_DEVICE=

# Apple app configuration
# Choose exactly one mode:
# 1) Single-app mode: set APPLE_APP_ID (and optionally APPLE_BUNDLE_ID), leave APPLE_APPS_JSON empty.
# 2) Multi-app mode: set APPLE_APPS_JSON, APPLE_APP_ID/APPLE_BUNDLE_ID can stay empty.

# Single-app mode
APPLE_APP_ID=1234567890
APPLE_BUNDLE_ID=com.example.app

# Multi-app mode (JSON string in one line)
# APPLE_APPS_JSON=[{"bundleId":"com.example.app1","appAppleId":1234567890},{"bundleId":"com.example.app2","appAppleId":2345678901,"pushoverUserKey":"override-user-key","pushoverDevice":"iphone"}]
APPLE_APPS_JSON=

# Apple signature verification
APPLE_ENABLE_ONLINE_CHECKS=false
APPLE_ROOT_CA_DIR=certs/apple

# Upstash Redis REST (used for deduplication)
KV_REST_API_URL=https://your-upstash-id.upstash.io
KV_REST_API_TOKEN=replace-with-upstash-rest-token
